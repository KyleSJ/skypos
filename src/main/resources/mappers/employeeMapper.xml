    <insert id="create">
        insert into emp (posNum, empId, empName, pwd)
        values(#{posNum},#{empId},#{empName},#{pwd})
    </insert>
    
    <select id="read" resultType="org.zerock.domain.EmployeeVO">
        select empId, posNum, empName, pwd
        from
        emp
        Where empId=#{empId}
    </select>
    
    <update id="update">
        update emp set empId=#{empId}, posNum=#{posNum}, empName=#{empName}, pwd=#{pwd}
        Where empId=#{empId}
    </update>
    
    <delete id="delete">
        delete from emp where empId=#{empId}
    </delete>
    
    <select id="listAll" resultType ="org.zerock.domain.EmployeeVO">
        <![CDATA[
        select empId, posNum, empName, pwd
        from
        emp
        where posNum =#{posNum}
        order by posNum desc
         ]]>
    </select>
    
</mapper>